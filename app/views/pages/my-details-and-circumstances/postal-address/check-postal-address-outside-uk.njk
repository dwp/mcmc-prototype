{% extends "layouts/layout.njk" %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukBackLink({
					"text": "Back",
					"href": "javascript: window.history.go(-1)"
				}) 
			}}

      <h1 class="govuk-heading-xl govuk-!-margin-bottom-7">Check your answers</h1>

    </div>

    <div class="govuk-grid-column-two-thirds">
      <form class="form" action="/pages/my-details-and-circumstances/postal-address/check-postal-address-outside-uk" method="post">

        {% set postalAddress %}
        {% if data["postal-address-line-1"] %}
          {{ data["postal-address-line-1"] }}
          <br />
          {{ data["postal-town-city"] }}
          <br />
          {{ data["postal-postcode"] }}
          <br />
          {{ data["postal-country"] }}
        {% elif data["where-to-send-lettes"] %}
          {{ data["where-to-send-lettes"] }}
          <br />
          {{ data["md-postcode"] }}
        {% else %}
          {{ data["postal-address"] }}
        {% endif %}
        {% endset %}

        {% set changeURL %}
          {% if data['manual-postal-address-outside-uk'] %}
            enter-postal-address-manually-outside-uk
          {% else %}
            where-to-send-letters
          {% endif %}
        {% endset %}

        {{ govukSummaryList({
            rows: [
              {
                key: {
                  text: "Where should we send your letters?"
                },
                value: {
                  html: postalAddress
                },
                actions: { classes: ['case-details-actions'],
                  items: [
                    {
                      href: changeURL,
                      text: "Change",
                      visuallyHiddenText: "change postal address"
                    }
                  ]
                }
              }
            ]
          }) }}

        {{ govukButton({
              text: "Continue",
              type: "submit"
          }) }}
      </form>
    </div>
  </div>

{% endblock %}