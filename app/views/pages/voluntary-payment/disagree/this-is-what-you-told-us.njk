{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  This is what you told us
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <form action="/pages/voluntary-payment/disagree/this-is-what-you-told-us" method="post" novalidate>
        <h1 class="govuk-heading-xl">This is what you told us</h1>
        {{ govukInsetText({
            text: data['reason-to-disagree']
        }) }}
        {{ govukRadios({
            classes: "govuk-radios",
            idPrefix: "f-whatYouToldUsYesNo",
            name: "whatYouToldUsYesNo",
            fieldset: {
              legend: {
                text: "Is this correct?",
                classes: "govuk-fieldset__legend--m"
              }
            },
            items: [
              {
                value: "Yes",
                text: t.common.yes | safe,
                checked: checked("whatYouToldUsYesNo", "Yes")
              },
              {
                value: "No",
                text: t.common.no | safe,
                checked: checked("whatYouToldUsYesNo", "No")
              }
            ]
        }) }}
        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}