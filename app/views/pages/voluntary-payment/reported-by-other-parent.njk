{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Voluntary payments reported by the other parent
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <form action="/pages/voluntary-payment/reported-by-other-parent" method="post" novalidate>
        <h1 class="govuk-heading-xl">Voluntary payments reported by the other parent</h1>
        <p class="govuk-body"><strong>Case:</strong> {{ data['case'] }}</p>
        {% set rowsToDisplay = [
          [
            {
              text: "20 October 2021"
            },
            {
              text: "Â£20"
            }
          ]
        ]
       %}

            {{ govukTable({
            head: [
              {
                text: "Payment Date"
              },
              {
                text: "Payment Amount"
              }
            ],
            rows: data['vp-reported-by-other-parent']
            }) }}
        {{ govukRadios({
            classes: "govuk-radios",
            idPrefix: "f-agreeYesNo",
            name: "agreeYesNo",
            fieldset: {
              legend: {
                text: "Do you agree with the payment details and that all the payments were made in place of scheduled child maintenance?",
                classes: "govuk-fieldset__legend--m"
              }
            },
            items: [
              {
                value: "Yes",
                text: t.common.yes | safe,
                checked: checked("agreeYesNo", "Yes")
              },
              {
                value: "No",
                text: t.common.no | safe,
                checked: checked("agreeYesNo", "No")
              }
            ]
        }) }}
        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>

{% endblock %}