{# {% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/button/macro.njk" import govukButton %} #}
{% extends "layouts/layout.njk" %}

{# {% block pageTitle %}
  Additional Income
{% endblock %} #}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "/pages/welcome"
      },
      {
        text: "Report a change",
        href: "/pages/welcome"
      },
      {
        text: "Additional Income"
      }
    ]
  }) }}
{% endblock %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{t.additional.additional_income}}</h1>
      {% if data['additionalIncomeUserType'] === 'NRP' %}
        <p>{{t.additional.the_child_maintenance_service_can_}}</p>
        <p>{{t.additional.we_call_this_additional_}}</p>
        <p>{{t.additional.there_are_four_types_NRP_}}</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>
            <b>{{t.additional.unearned_income}}
            </b>{{t.additional.such_as_rent_}}</li>
          <li>
            <b>{{t.additional.earned_income}}</b>
            {{t.additional.where_you_or_your_partner_}}</li>
          <li>
            <b>{{t.additional.diversion_income}}</b>
            {{t.additional.where_you_can_control_}}</li>
          <li>
            <b>{{t.additional.assets}}</b>
            {{ t.additional._land_the_paying_parent_owns_}}</li>
        </ul>

        <p>{{ t.additional.you_will_need_to_provide_evidence_}}</p>
        <p>{{ t.additional.if_you_are_reporting_more_than_one_}}</p>
      {% else %}
        <p>{{t.additional.the_child_maintenance_service_can_}}</p>
        <p>{{t.additional.we_call_this_additional_}}</p>
        <p>{{t.additional.there_are_four_types_PWC_}}</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>
            <b>{{t.additional.unearned_income}}
            </b>{{t.additional.such_as_rent_}}</li>
          <li>
            <b>{{t.additional.earned_income}}</b>
            {{t.additional.where_the_paying_parent_or_their_partner_}}</li>
          <li>
            <b>{{t.additional.diversion_income}}</b>
            {{t.additional.where_the_paying_parent_can_control_}}</li>
          <li>
            <b>{{t.additional.assets}}</b>
            {{ t.additional._land_you_own_}}</li>
        </ul>

        <p>{{ t.additional.you_can_provide_evidence_}}</p>
        <p>{{ t.additional.if_you_are_reporting_more_than_one_}}</p>
      {% endif %}

      {{ govukButton({
        text: t.common['start-now'] ,
        href: "/pages/additional-income/additional-income-how-much-income",
        classes: "govuk-!-margin-top-2 govuk-!-margin-bottom-8",
        isStartButton: true
      }) }}

    </div>

    <div class="govuk-grid-column-one-third"></div>
  </div>
{% endblock %}