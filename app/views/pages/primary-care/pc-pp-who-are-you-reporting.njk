{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Question page
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form class="form" action="" method="post">

        {{ govukRadios({
          idPrefix: "which-child",
          name: "which-child",
          fieldset: {
            legend: {
              text: "Who are you reporting a change for?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            {
              value: "A child with Edshpwcfirstname",
              text: "A child with Edshpwcfirstname"
            },
            {
              value: "Another child who lives with you or you financially support",
              text: "Another child who you financially support"
            }
          ]
        }) }}

        <button class="govuk-button" data-module="govuk-button">Continue</button>

      </form>

    </div>
  </div>

{% endblock %}