{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Question page
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">Declaration</h1>
      <p class="govuk-body">Before sending this request you confirm that:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>the information is correct and complete as far as you know</li>
        <li>you'll report any changes that might affect how much child maintenance you pay or receive</li>
      </ul>

      <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
          <span class="govuk-warning-text__assistive">Warning</span>
          You could be prosecuted and have to pay a financial penalty if you knowingly give the wrong information or do not report changes.
        </strong>
      </div>

      <form action="pc-pp-success" method="POST">
        <button type="submit" class="govuk-button">
          Confirm and send
        </button>
      </form>
    </div>
  </div>

{% endblock %}