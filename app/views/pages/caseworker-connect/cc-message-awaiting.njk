{% extends "layouts/layout.njk" %}

{% block content %}
{{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
}}

	<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">Message sent</h1>

      <p class="govuk-body"><b>Subject:</b> Change to your income</p>
      <br>
     
      <h2 class="govuk-heading-l">We are dealing with your message</h2>
      <p class="govuk-body">You cannot send a new message or upload any new evidence for this conversation until we respond.</p>
      <br>

        <button type="submit" class="govuk-button" onclick="window.history.go(-1); return false;">
        Return to messages
      </button>
     <br>


      <table class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--l">Message history</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header">Date sent</th>
            <th scope="col" class="govuk-table__header">Message</th>
            <th scope="col" class="govuk-table__header">Sent by</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <tr class="govuk-table__row">
            <td scope="row" class="govuk-table__cell">3:00pm <br> 3 Dec 2024</td>
            <td class="govuk-table__cell">{{data['connectMessage']}}</td>
            <td class="govuk-table__cell">You</td>
          </tr>
          <tr class="govuk-table__row">
            <td scope="row" class="govuk-table__cell">9:03am <br> 3 Dec 2024</td>
            <td class="govuk-table__cell">Hello, please could you confirm that the date of the first missed payment was 3 Nov 2024?</td>
            <td class="govuk-table__cell">CMS</td>
          </tr>

      </table>

      
	  </div>
	  </div>

{% endblock %}