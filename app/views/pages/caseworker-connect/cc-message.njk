{% extends "layouts/layout.njk" %}

{% block content %}
{{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
}}

	<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">Response required by 29 January 2025</h1>

      <p class="govuk-body"><b>Subject:</b> Change to your income</p>

      
      <table class="govuk-table">
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header govuk-table__caption--l">Latest message</th>
            <th scope="col" class="govuk-table__header"></th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <tr class="govuk-table__row">
            <td class="govuk-table__cell">Hello, please could you confirm that the date of the first missed payment was 3 Nov 2024</td>
            <td scope="row" class="govuk-table__cell">9:03am <br> Today
            </td>
          </tr>
      </table>

      <br>
     
     <form class="form" method="POST" action="threadpageawaiting">
        {{ govukCharacterCount({
            name: "connectMessage",
            id: "connectMessage",
            maxlength: 400,
            label: {
                text: "Write a message",
                classes: "govuk-label--l",
                isPageHeading: true
            }
            }) }}

            <div class="govuk-form-group">
              <fieldset class="govuk-fieldset" aria-describedby="waste-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                  <h1 class="govuk-fieldset__heading">
                    Is your message ready to send?
                  </h1>
                </legend>
                <div id="waste-hint" class="govuk-hint">
                  Once you have sent your message, you cannot send a new message until we have responded.
                </div>
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="waste" name="waste" type="checkbox" value="carcasses">
                    <label class="govuk-label govuk-checkboxes__label" for="waste">
                      Yes
                    </label>
                  </div>
                </div>
              </fieldset>
            </div>

        <button type="submit" class="govuk-button">
        Send message
      </button>

	 </form>

     <br>


      <table class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--l">Message history</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header">Date sent</th>
            <th scope="col" class="govuk-table__header">Message</th>
            <th scope="col" class="govuk-table__header">Sent by</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <tr class="govuk-table__row">
            <td scope="row" class="govuk-table__cell">9:03am <br> 3 Dec 2024</td>
            <td class="govuk-table__cell">Hello, please could you confirm that the date of the first missed payment was 3 Nov 2024</td>
            <td class="govuk-table__cell">CMS</td>
          </tr>
      </table>

      
	  </div>
	  </div>

{% endblock %}