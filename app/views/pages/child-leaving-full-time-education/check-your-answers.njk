{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Check your answers
{% endblock %}

{% block content %}

  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "/pages/welcome"
      },
      {
        text: "Child leaving full-time education",
        href: "/pages/child-leaving-full-time-education/child-leaving-fte-start"
      },
      {
        text: "Check your answers",
        href: "/pages/child-leaving-full-time-education/check-your-answers"
      }
    ]
  }) }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <h1 class="govuk-heading-xl">Check your answers</h1>

      <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            {childs name}
          </dt>
        </div>
      </dl>
      <dl class="govuk-summary-list govuk-!-margin-bottom-9">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            {childs name} in full-time education
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['still-in-fulltime-education'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a href="/pages/child-leaving-full-time-education/child-still-in-fte">
              Change
              <span class="govuk-visually-hidden"> child still in full-time education</span>
            </a>
          </dd>
        </div>
      </dl>

      <form action="/pages/child-leaving-full-time-education/declaration" method="post" novalidate>

        <button type="submit" class="govuk-button" data-module="govuk-button">Continue</button>

      </form>

    </div>
  </div>
{% endblock %}