{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Declaration
{% endblock %}

{% block content %}

  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "/pages/welcome"
      },
      {
        text: "Child leaving full-time education",
        href: "/pages/child-leaving-full-time-education/child-leaving-fte-start"
      },
      {
        text: "Declaration",
        href: "/pages/child-leaving-full-time-education/declaration"
      }
    ]
  }) }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">Declaration</h1>
      <p class="govuk-body">Before sending this request you confirm that:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>the information is correct and complete as far as you know</li>
        <li>you'll report any changes that might affect how much child maintenance you pay or receive</li>
      </ul>

      {{ govukWarningText({
        text: "You could be prosecuted and have to pay a financial penalty if you knowingly give the wrong information or do not report changes.",
        iconFallbackText: "Warning"
      }) }}

      <form action="/pages/child-leaving-full-time-education/success" method="POST">
        <button type="submit" class="govuk-button">
          Confirm and send
        </button>
      </form>

    </div>
  </div>
{% endblock %}