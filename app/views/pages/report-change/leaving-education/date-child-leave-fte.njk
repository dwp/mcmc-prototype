{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  {{ t['leaving-education']['education'] }}
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}<br></br>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="" method="POST">
        {{ govukDateInput({
          namePrefix: 'dateLeaveFte',
          hint: {
            text: t['leaving-education']['for-example-12']
          },
          fieldset: {
            legend: {
              text: t['leaving-education']['what-date-did'] + "{childs name}" + t['leaving-education']['leave-full-education'],
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          }
        }) }}

        <button type="submit" class="govuk-button">
          {{ t['common']['continue'] }}
        </button>
      </form>
    </div>

  {% endblock %}