{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  {{ t['leaving-education']['education'] }}
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}<br></br>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="/pages/report-change/leaving-education/which-child-reporting" method="POST">
        {{ govukRadios({
                classes: "govuk-radios",
                idPrefix: "f-childLiveWithYou",
                name: "childLiveWithYou",
                fieldset: {
                    legend: {
                        text: t['leaving-education']['are-you-reporting-your-child'],
                        isPageHeading: true,
                        classes: "govuk-fieldset__legend govuk-fieldset__legend--l"
                    }
                },
                items: [
                    {
                        value: "yourChild",
                        text: t['leaving-education']['your-child']
                    },
                    {
                        value: "anotherChild",
                        text: t['leaving-education']['another-child-relevant-to-your-case']
                    }
                ]
            }) }}
        <button type="submit" class="govuk-button" name="startNow">
          {{ t['common']['continue'] }}
        </button>
      </form>
    </div>
  </div>
{% endblock %}