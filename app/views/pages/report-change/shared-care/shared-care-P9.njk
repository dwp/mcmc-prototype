{% extends "layouts/layout.njk" %}

{% block content %}
{{ govukBackLink({
  "text": "Back",
  "href": "/pages/report-change/shared-care/shared-care-P8"
}) 
}}

	<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">What type of written agreement is in place?</h1>
      <p class="govuk-body"> If you have more than one type of written agreement you only need to select one option.</p>

      <form class="form" method="POST" action="shared-care-CA">

       {{ govukRadios({
        name: "writtenAgreement",
        fieldset: {
          legend: {
            text: "",
            isPageHeading: false,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: [
          {
            value: "A current court order",
            text: "A current court order"
          },
          {
            value: "A formal agreement, for example drawn up by a solicitor",
            text: "A formal agreement, for example drawn up by a solicitor"
          },
          {
            value: "Another official document, for example Children and Family Court Advisory and Support Service (CAFCASS) or Social Services reports",
            text: "Another official document, for example Children and Family Court Advisory and Support Service (CAFCASS) or Social Services reports"
          },
          {
            divider: "or"
          },
          {
            value: "None",
            text: "I do not have a written agreement",
            hint: {
            text: "If you do not have a written agreement, we will make our decision based on the information you and the other parent provided."
          }
          }
        ]
      }) }}

      <button type="submit" class="govuk-button">
        Continue
      </button>
	 </form>

	  </div>
	  </div>

{% endblock %}