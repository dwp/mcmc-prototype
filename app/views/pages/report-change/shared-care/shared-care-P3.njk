{% extends "layouts/layout.njk" %}

{% block content %}
{{ govukBackLink({
  "text": "Back",
  "href": "/pages/report-change/shared-care/shared-care-P2"
}) 
}}

	<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">Existing overnight arrangement</h1>
      <h3 class="govuk-heading-m">You can update the overnight arrangement</h3>

      {% if data['whichChild'] == 'All' %}
      <p class="govuk-body">Clare and 1 other stay overnight</p>
      {% elif data['whichChild'] == 'Clare' %}
      <p class="govuk-body">Clare stays overnight</p>
      {% elif data['whichChild'] == 'Jordan' %}
      <p class="govuk-body">Jordan stays overnight</p>
      {% endif %}
      <p class="govuk-body">Between 52 and 103 nights per year</p>
      <p class="govuk-body">This means theres a 1/7th reduction to your child maintenance.</p>

      <h3 class="govuk-heading-m">Has the number of nights changed to less than 52 or more than 103 each year?</h3>

      <form class="form"method="POST">

        {{ govukRadios({
          idPrefix: "numberOfNights",
          name: "numberOfNights",
          fieldset: {
            legend: {
              text: "",
              isPageHeading: no,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
            {
              value: "Yes",
              text: "Yes"
            },
            {
              value: "No",
              text: "No"
            }
          ]
        }) }}

      <button type="submit" class="govuk-button">
        Continue
      </button>
	 </form>

	  </div>
	  </div>

{% endblock %}