{% extends "layouts/layout.njk" %}

{% block content %}
{{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
}}

	<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form class="form" action="ct-checkAnswers" method="POST">
      
      {{ govukDateInput({
        id: "ct-dateOfBirth",
        namePrefix: "ct-dateOfBirth",
        fieldset: {
          legend: {
            text: "What is the child's date of birth??",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        hint: {
          text: "For example, 27 3 2007"
        }
      }) }}

      <button type="submit" class="govuk-button">
        Continue
      </button>
	 </form>

	  </div>
	  </div>

{% endblock %}