{% extends "layouts/layout.njk" %}

{% block content %}
{{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
}}

	<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">What is the child's name? </h1>

      <form class="form" action="ct-dateOfBirth" method="POST">

        {{ govukInput({
          label: {
            text: "First name",
            classes: "govuk-label--m",
            isPageHeading: false
          },
          id: "ct-childNameFirst",
          name: "ct-childNameFirst"
        }) }}

        {{ govukInput({
          label: {
            text: "Last name",
            classes: "govuk-label--m",
            isPageHeading: false
          },
          id: "ct-childNameLast",
          name: "ct-childNameLast"
        }) }}


      <button type="submit" class="govuk-button">
        Continue
      </button>
	 </form>

	  </div>
	  </div>

{% endblock %}