{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Missed or partial payment
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <br>
      <h1 class="govuk-heading-xl">Give us details of any payments you have received since {{ data['firstMissedPaymentDay'] }}/{{ data['first-missed-payment-month'] }}/{{ data['first-missed-payment-year'] }}</h1>
      


      <div class="govuk-form-group">
  <fieldset class="govuk-fieldset" role="group" aria-describedby="passport-issued-hint">
  <form method="post">

    <h2 class="govuk-label-wrapper"><label class="govuk-label govuk-label--m" for="cost">
          Date received
        </label>
    </h2>

    <div id="passport-issued-hint" class="govuk-hint">
      For example, 21 1 2022
    </div>

    <div class="govuk-date-input" id="passport-issued">
      <div class="govuk-date-input__item">
        <div class="govuk-form-group">
          <label class="govuk-label govuk-date-input__label" for="payment-day">
            Day
          </label>
          <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="payment-day-2" name="payment-day-2" type="text" inputmode="numeric" value="{{ data['payment-day-2'] }}">
        </div>
      </div>
      <div class="govuk-date-input__item">
        <div class="govuk-form-group">
          <label class="govuk-label govuk-date-input__label" for="passport-issued-month">
            Month
          </label>
          <input class="govuk-input govuk-date-input__input govuk-input--width-2" id="payment-month-2" name="payment-month-2" type="text" inputmode="numeric" value="{{ data['payment-month-2'] }}">
        </div>
      </div>
      <div class="govuk-date-input__item">
        <div class="govuk-form-group">
          <label class="govuk-label govuk-date-input__label" for="payment-year">
            Year
          </label>
          <input class="govuk-input govuk-date-input__input govuk-input--width-4" id="payment-year-2" name="payment-year-2" type="text" inputmode="numeric" value="{{ data['payment-year-2'] }}">
        </div>
      </div>
    </div><br><br>

    <div class="govuk-form-group">
      <h2 class="govuk-label-wrapper"><label class="govuk-label govuk-label--m" for="cost">
          Amount received
        </label>
      </h2>

      <div id="passport-issued-hint" class="govuk-hint">
      Can include pence, like 123.45 or 156.00
    </div>

    <div class="govuk-input__wrapper">
      <div class="govuk-input__prefix" aria-hidden="true">Â£</div>
        <input class="govuk-input govuk-input--width-5" id="payment-amount-2" name="payment-amount-2" type="text" spellcheck="false" value="{{ data['payment-amount-2'] }}">
    </div>


  </fieldset>
</div>

      {% from "govuk/components/button/macro.njk" import govukButton %}

      <div class="govuk-button-group">
        {{ govukButton({
          text: "Continue"
        }) }}

        {{ govukButton({
          text: "Add another payment",
          href: "#",
          classes: "govuk-button--secondary"
        }) }}
      </div>

    </form>
    
      <div>
        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
          Chat to an adviser
          </span>
          </summary>

          <div class="govuk-details__text">
              <h4 class="govuk-heading-s">Webchat</h4>
              <p class="govuk-body">We do not accept any behaviour that is abusive or threatening to our staff. We will end the webchat if your behaviour is unacceptable.</p>
              <p class="govuk-body"><a class="govuk-link" href="#">Start webchat</a><br>Monday to Friday, 8am to 7:30pm (except public holidays) <br> Saturday, 9am to 1pm.</p>
          </div>
        </details>
      </div>
  </div>

  

{% endblock %}