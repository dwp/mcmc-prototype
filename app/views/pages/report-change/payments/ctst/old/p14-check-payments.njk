{% extends "layouts/layout.njk" %}

{% block pageTitle %}  
  Payment service
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <br>
      <h1 class="govuk-heading-xl">Check your answers</h1>

      
      <table class="govuk-table">
        <caption class="govuk-table__caption govuk-table__caption--m">Case: Noah and 1 more</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header">Payment date</th>
            <th scope="col" class="govuk-table__header govuk-!-text-align-left govuk-table__header--numeric">Amount received</th>
            <th scope="col" class="govuk-table__header govuk-!-text-align-left govuk-table__header--numeric">Change</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <tr class="govuk-table__row">
            <td class="govuk-table__cell govuk-!-text-align-left govuk-table__cell--numeric govuk-!-width-one-half">{{ data['payment-day-1'] }}/{{ data['payment-month-1'] }}/{{ data['payment-year-1'] }}</td>
            <td class="govuk-table__cell govuk-!-text-align-left govuk-table__cell--numeric">£{{ data['payment-amount-1'] }}</td>
            <td class="govuk-table__cell govuk-!-text-align-left govuk-link"> <a class="govuk-link" href="/pages/report-change/payments/ctst/p13-payment-details-1">Change</a> </td>
          </tr>
        </tbody>
        <tbody class="govuk-table__body">
          <tr class="govuk-table__row">
            <td class="govuk-table__cell govuk-!-text-align-left govuk-table__cell--numeric">{{ data['payment-day-2'] }}/{{ data['payment-month-2'] }}/{{ data['payment-year-2'] }}</td>
            <td class="govuk-table__cell govuk-!-text-align-left govuk-table__cell--numeric">£{{ data['payment-amount-2'] }}</td>
            <td class="govuk-table__cell govuk-!-text-align-left govuk-link"> <a class="govuk-link" href="/pages/report-change/payments/ctst/p13-payment-details-2">Change</a> </td>
          </tr>
        </tbody>
      </table>

      <form method="post">
      <button class="govuk-button">
          Continue
      </button>
      </form>


      <div>
        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
          If you need help with this change
          </span>
          </summary>

          <div class="govuk-details__text">
              <h4 class="govuk-heading-s">Webchat</h4>
              <p class="govuk-body">We do not accept any behaviour that is abusive or threatening to our staff. We will end the webchat if your behaviour is unacceptable.</p>
              <p class="govuk-body"><a class="govuk-link" href="#">Start webchat</a><br>Monday to Friday, 8am to 7:30pm (except public holidays) <br> Saturday, 9am to 1pm.</p>
          </div>
        </details>
      </div>
    </div>
  </div>

  

{% endblock %}