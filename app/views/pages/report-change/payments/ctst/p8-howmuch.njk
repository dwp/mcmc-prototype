{% extends "layouts/layout.njk" %}

{% block content %}
{{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}

	<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">How much of the payment due on {{data['dueDate']}} did you receive?</h1>

      <form class="form" action="p10-otherpayments" method="POST">
        {{ govukInput({
          id: "howMuch",
          name: "howMuch",
          label: {
            text: "",
            classes: "govuk-label--l",
            isPageHeading: true
          },
          prefix: {
            text: "£"
          },
          hint: {
            text: "For example, £60"
          },
          classes: "govuk-input--width-5",
          spellcheck: false
        }) }}

      <br>
      <button type="submit" class="govuk-button">
        Continue
      </button>
	 </form>

	  </div>
	  </div>

{% endblock %}