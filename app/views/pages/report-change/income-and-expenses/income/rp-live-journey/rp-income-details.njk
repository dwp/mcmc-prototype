{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Change of income
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="rp-income-check-answers" method="post">
      <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="600">
        <div class="govuk-form-group">
          <h1 class="govuk-label-wrapper"><label class="govuk-label govuk-label--xl" for="with-hint">
              Change of income details
            </label>
          </h1>
          <div id="income-details-hint">
            <p class="govuk-body">We need details to support your request, for example:</p>
            <ul class="govuk-list govuk-list--bullet">
              <li>the reason why youâ€™re reporting the change</li>
              <li>details of a change in circumstances for the other parent you believe we are not aware of</li>
              <li>f you do not know the exact amount and date of the other parent's new income give us as much detail as possible about the amount, date and the reason why you are reporting</li>
            </ul>
          </div>
          <textarea class="govuk-textarea govuk-js-character-count" id="income-details" name="income-details" rows="5" aria-describedby="income-details-info income-details-hint">{{data['income-details']}}</textarea>
        </div>
      
        <div id="income-details-info" class="govuk-hint govuk-character-count__message">
          You can enter up to 600 characters
        </div>
      
      </div>
      
      <button type="submit" class="govuk-button" data-module="govuk-button">
        Continue
      </button>
    </form>

      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            Chat to an adviser
          </span>
        </summary>
        <div class="govuk-details__text">
          <h4 class="govuk-heading-s">Webchat</h4>
          <p class="govuk-body">We do not accept any behaviour that is abusive or threatening to our staff. We will end the webchat if your behaviour is unacceptable.</p>
          <p class="govuk-body"><a class="govuk-link" href="#">Start webchat</a><br>Monday to Friday, 8am to 7:30pm (except public holidays) <br> Saturday, 9am to 1pm.</p>
        </div>
      </details>
    </div>
  </div>


{% endblock %}