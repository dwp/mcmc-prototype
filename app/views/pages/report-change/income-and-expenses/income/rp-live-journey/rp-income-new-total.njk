{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Change of income
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-fieldset__heading">
            What is the other parent's new gross taxable annual income?
          </h1>
        </legend>
        <div class="govuk-grid-row">
          <form action="rp-income-date-of-change" method="post">
          <div class="govuk-form-group">
            <div class="govuk-grid-column-two-thirds">
              <label class="govuk-label" for="current-income">
                Current income figure we hold for the other parent
              </label>
            </div>
            <div class="govuk-grid-column-one-third">
              <input disabled="disabled" aria-disabled="true" class="govuk-input" id="current-income" name="current-income" type="text" value="1000.00">
            </div>
          </div>
        
          <div class="govuk-form-group">
            <div class="govuk-grid-column-two-thirds">
              <label class="govuk-label" for="new-income">
                New annual employment income before tax and National Insurance and after occupational pension contributions 
              </label>
              <div id="new-income-hint" class="govuk-hint">
                Total income received from all employers. Include any income from a private or occupational pension.
              </div>
            </div>
            <div class="govuk-grid-column-one-third">
              <div class="govuk-input__wrapper">
                <div class="govuk-input__prefix" aria-hidden="true">£</div>
                <input class="govuk-input" id="new-income" name="new-income" type="text" spellcheck="false">
              </div>
            </div>
          </div>

          <div class="govuk-form-group">
            <div class="govuk-grid-column-two-thirds">
              <label class="govuk-label" for="new-self-employed-income">
                New annual self-employed profits before tax and National Insurance
              </label>
              <div id="new-self-employed-income-hint" class="govuk-hint">
                Accounting period income - Allowed business expenses = Profit. If your business made a loss you should enter zero. 
              </div>
            </div>
            <div class="govuk-grid-column-one-third">
              <div class="govuk-input__wrapper">
                <div class="govuk-input__prefix" aria-hidden="true">£</div>
                <input class="govuk-input" id="new-self-employed-income" name="new-self-employed-income" type="text" spellcheck="false">
              </div>
            </div>
          </div>

          <div class="govuk-form-group">
            <div class="govuk-grid-column-two-thirds">
              <label class="govuk-label" for="pension-contribution">
                New annual private pension contributions
              </label>
            </div>
            <div class="govuk-grid-column-one-third">
              <div class="govuk-input__wrapper">
                <div class="govuk-input__prefix" aria-hidden="true">£</div>
                <input class="govuk-input" id="pension-contribution" name="pension-contribution" type="text" spellcheck="false">
              </div>
            </div>
          </div>

          <div class="govuk-form-group">
            <div class="govuk-grid-column-two-thirds">
              <label class="govuk-label govuk-!-font-weight-bold" for="new-total-income">
                Total new annual income
              </label>
            </div>
            <div class="govuk-grid-column-one-third">
              <input disabled="disabled" aria-disabled="true" class="govuk-input" id="new-total-income" name="new-total-income" type="text">
            </div>
          </div>
        </div>
      </fieldset>

      <button type="submit" class="govuk-button" data-module="govuk-button">
        Continue
      </button>
    </form>

      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            Chat to an adviser
          </span>
        </summary>
        <div class="govuk-details__text">
          <h4 class="govuk-heading-s">Webchat</h4>
          <p class="govuk-body">We do not accept any behaviour that is abusive or threatening to our staff. We will end the webchat if your behaviour is unacceptable.</p>
          <p class="govuk-body"><a class="govuk-link" href="#">Start webchat</a><br>Monday to Friday, 8am to 7:30pm (except public holidays) <br> Saturday, 9am to 1pm.</p>
        </div>
      </details>
    </div>
  </div>
{% endblock %}