{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Change of income
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-xl govuk-!-padding-bottom-2">Income from employment</span> 
      <h1 class="govuk-heading-l">Have you earned a bonus, commission or overtime in the last 12 months from your current employer?</h1>

      {% set yesBonus %}
      {{ govukInput({
        id: "bonus-amount",
        name: "bonus-amount",
        label: {
          text: "How much bonus, commission and overtime have you earned?",
          classes: "govuk-label"
        },
        prefix: {
          text: "Â£"
        },
        classes: "govuk-input--width-5"
      }) }}
      {% endset -%}
     
      <form method="post">
        <div>

      {{ govukRadios({
            idPrefix: "bonus",
            name: "bonus",
            items: [
              {
                value: "Yes",
                text: "Yes",
                conditional: {
                  html: yesBonus
                }
              },
              {
                value: "No",
                text: "No"
              }
            ]
        }) }}

        <button type="submit" class="govuk-button">
          Continue
        </button>
      </form>

  <details class="govuk-details" data-module="govuk-details">
  <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text">
      If you need help with this change
    </span>
  </summary>
  <div class="govuk-details__text">
    <h4 class="govuk-heading-s">Webchat</h4>
    <p class="govuk-body">We do not accept any behaviour that is abusive or threatening to our staff. We will end the webchat if your behaviour is unacceptable.</p>
    <p class="govuk-body"><a class="govuk-link" href="#">Start webchat</a><br>Monday to Friday, 8am to 7:30pm (except public holidays) <br> Saturday, 9am to 1pm.</p>
  </div>
</details>

{% endblock %}