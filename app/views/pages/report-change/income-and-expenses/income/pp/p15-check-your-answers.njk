{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Change of income
{% endblock %}

{% block content %}

              {% set newIncome  %}
              {{ +data['income']++data['bonus-amount']++data['pension-income-amount']++data['benefits-amount']-+data['private-pension-amount']-+data['employer-pension-amount'] }}
              {% endset %}


  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Check your answers</h1>

      <dl class="govuk-summary-list govuk-summary-list--no-border">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key govuk-heading-m govuk-!-width-one-half">
              New total income we have calculated
            </dt>
            <dd class="govuk-summary-list__value govuk-heading-m" align="left">
              Â£{{ newIncome }}
            </dd>
            <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p12-total-income">
              Change</a>
            </dd>
          </div>
        </dl>
     
      <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row ">
          <dt class="govuk-summary-list__key govuk-!-width-one-half">
            Current employment status
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['employmentStatus'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p2-status">
              Change</a>
            </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Change of income effective date
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['effective-day'] }}/{{ data['effective-month'] }}/{{ data['effective-year'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p4-effective-date">
              Change</a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Change of income likely to last more than 12 weeks
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['last12Weeks'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p4-effective-date">
              Change</a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Already been paid new wage
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['beenPaid'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p5-date-paid">
              Change</a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Date first paid
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data.day[0] }}{{ data.day[1] }}/{{ data.month[0] }}{{ data.month[1] }}/{{ data.year[0] }}{{ data.year[1] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p5-date-paid">
              Change</a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Taxable company benefits
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['benefits'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p8-any-benefits">
              Change</a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Value of taxable company benefits
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['benefits'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p10-pension-contributions">
              Change</a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Receive income from pensions
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['pensionIncome'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p11-pension-income">
              Change</a>
          </dd>
        </div>
         <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Paid the same or similar amount each time you get paid
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['paySameOrSimilar'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p14-evidence">
              Change</a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Reason pay varies
          </dt>
          <dd class="govuk-summary-list__value">
            {{ data['why-amount-changes'] }}
          </dd>
          <dd class="govuk-summary-list__actions">
            <a class="govuk-link" href="p13-income-stability">
              Change</a>
          </dd>
        </div>
        
      </dl>

      

      <form method="post">
      <button class="govuk-button">
          Continue
      </button>
      </form>


  <details class="govuk-details" data-module="govuk-details">
  <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text">
      If you need help with this change
    </span>
  </summary>
  <div class="govuk-details__text">
    <h4 class="govuk-heading-s">Webchat</h4>
    <p class="govuk-body">We do not accept any behaviour that is abusive or threatening to our staff. We will end the webchat if your behaviour is unacceptable.</p>
    <p class="govuk-body"><a class="govuk-link" href="#">Start webchat</a><br>Monday to Friday, 8am to 7:30pm (except public holidays) <br> Saturday, 9am to 1pm.</p>
  </div>
</details>

{% endblock %}