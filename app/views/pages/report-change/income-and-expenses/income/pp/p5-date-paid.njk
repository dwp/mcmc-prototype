{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Change of income
{% endblock %}

{% block content %}

  {{ govukBackLink({
      "text": "Back",
      "href": "javascript: window.history.go(-1)"
    }) 
  }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Have you been paid your new wage yet?</h1>

      {% set yesPaid %}
      {{ govukDateInput({
        id: "date-first-paid",
        name: "date-first-paid",
        fieldset: {
            legend: {
              text: "What date were you first paid your new wage?"
            }
          },
          hint: {
          text: "For example, 27 3 2007"
        }
      }) }}
      {% endset -%}

      {% set notPaid %}
      {{ govukDateInput({
        id: "date-will-be-paid",
        name: "date-will-be-paid",
        fieldset: {
            legend: {
              text: "What date will you first be paid your new wage?"
            }
          },
          hint: {
          text: "For example, 27 3 2007"
        }
      }) }}
      {% endset -%}
     
      <form method="post">
        <div>

      {{ govukRadios({
            idPrefix: "beenPaid",
            name: "beenPaid",
            items: [
              {
                value: "Yes",
                text: "Yes",
                conditional: {
                  html: yesPaid
                }
              },
              {
                value: "No",
                text: "No",
                conditional: {
                  html: notPaid
                }
              }
            ]
        }) }}
        <button type="submit" class="govuk-button">
          Continue
        </button>
      </form>

  <details class="govuk-details" data-module="govuk-details">
  <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text">
      If you need help with this change
    </span>
  </summary>
  <div class="govuk-details__text">
    <h4 class="govuk-heading-s">Webchat</h4>
    <p class="govuk-body">We do not accept any behaviour that is abusive or threatening to our staff. We will end the webchat if your behaviour is unacceptable.</p>
    <p class="govuk-body"><a class="govuk-link" href="#">Start webchat</a><br>Monday to Friday, 8am to 7:30pm (except public holidays) <br> Saturday, 9am to 1pm.</p>
  </div>
</details>

{% endblock %}