{% extends "layouts/layout.njk" %}

{% block pageTitle %}
Confirmation letter
{% endblock %}

{% block content %}
{{ govukBackLink({
  "text": "Back",
  "href": "javascript: window.history.go(-1)"
}) 
}}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Confirmation letter</h1>
      
      <p class="govuk-body">We can provide a letter to confirm:</p>
      <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-7">
        <li>we have checked the paying parent’s latest income with HMRC</li>
        <li>there’s no evidence their income has changed by 25% or more</li>
        <li>your payment calculation will not change</li>
      </ul>

      <form action="/pages/report-change/income-and-expenses/income/rp/RTI-income-less-25" method="post">
        {{ govukRadios({
          idPrefix: "want-letter",
          name: "want-letter",
          fieldset: {
            legend: {
              text: "Do you need a letter to confirm your calculation will not change?",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "Yes",
              checked: checked("want-letter", "Yes"),
              text: "Yes"
            },
            {
              value: "No",
              checked: checked("want-letter", "No"),
              text: "No – you will be redirected to the homepage"
            }
          ]
        }) }}
      
        <button type="submit" class="govuk-button" data-module="govuk-button">
          Continue
        </button>
      </form>



      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            If you need help with this change
          </span>
        </summary>
        <div class="govuk-details__text">
          <h4 class="govuk-heading-s">Webchat</h4>
          <p class="govuk-body">We can only support you to report a change online. If you need to discuss specific details about your case you will need to <a href="https://www.gov.uk/child-maintenance-service/contact">call us (opens in a new tab)</a>.</p>
      
          <p class="govuk-body">We do not accept any behaviour that is abusive or threatening to our staff. We will end the webchat if your behaviour is unacceptable.</p> 
      
          <p class="govuk-body"><a class="govuk-link" href="#">Start webchat</a><br>Monday to Friday, 8am to 6pm (except public holidays).</p>
        </div>
      </details>

    </div>
  </div>


{% endblock %}