{% extends "layouts/layout.njk" %}

{% block pageTitle %}
  Track Changes
{% endblock %}

{% block content %}

  <a href="/pages/track-changes/timeline-v1" class="govuk-back-link">Back to Track Changes</a><br></br>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-body govuk-!-margin-bottom-0 track-changes-case-reference">Jimmy and 1 other</p>
      <h1 class="govuk-heading-xl">Change bank details</h1>
      <p class="govuk-body">
        <a href="/pages/messages/upload-evidence/start" class="govuk-link govuk-!-margin-top-3">Upload evidence</a>
      </p>
      <h2 class="govuk-heading-l">Progress</h2>
    </div>
  </div>

  {{cmgTimeline({
    timeline: 'blue',
    events: [
    {
      title: 'Reported on',
      date: '17 September 2021'
    },
    {
      title: 'Most recent update',
      date: '17 September 2021',
      status: { text: 'Received',
                classes: 'govuk-tag govuk-tag--blue govuk-!-margin-top-3'  },
      statusText: 'We are assigning your report to a case worker who will start working on it within 7 days. Once your report has been assigned, the status will change to in progress.'
    }
    ]
  })}}

  {{cmgTimeline({
    timeline: 'grey',
    events: [
    {
      title: 'Expected completion date',
      date: '27 October 2021',
      statusText: 'We will tell you if the change has been accepted or rejected.'
    }
    ]
  })}}
{% endblock %}